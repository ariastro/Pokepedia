<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginHorizontal="@dimen/_20sdp"
	android:layout_marginVertical="@dimen/_6sdp"
	app:cardCornerRadius="@dimen/_12sdp">

	<com.facebook.shimmer.ShimmerFrameLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<androidx.constraintlayout.widget.ConstraintLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<View
				android:id="@+id/shimmer_img_pokemon"
				android:layout_width="@dimen/_70sdp"
				android:layout_height="@dimen/_70sdp"
				android:layout_marginVertical="@dimen/_12sdp"
				android:layout_marginEnd="@dimen/_16sdp"
				android:background="@drawable/bg_shimmer"
				app:layout_constraintBottom_toBottomOf="parent"
				app:layout_constraintEnd_toEndOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<View
				android:id="@+id/shimmer_pokemon_index"
				android:layout_width="@dimen/_32sdp"
				android:layout_height="@dimen/_12sdp"
				android:layout_marginStart="@dimen/_16sdp"
				android:layout_marginTop="@dimen/_16sdp"
				android:background="@drawable/bg_shimmer"
				app:layout_constraintStart_toStartOf="parent"
				app:layout_constraintTop_toTopOf="parent" />

			<View
				android:id="@+id/shimmer_pokemon_name"
				android:layout_width="0dp"
				android:layout_height="@dimen/_16sdp"
				android:layout_marginEnd="@dimen/_16sdp"
				android:layout_marginTop="@dimen/_4sdp"
				android:background="@drawable/bg_shimmer"
				app:layout_constraintEnd_toStartOf="@+id/shimmer_img_pokemon"
				app:layout_constraintStart_toStartOf="@+id/shimmer_pokemon_index"
				app:layout_constraintTop_toBottomOf="@+id/shimmer_pokemon_index"/>

			<View
				android:id="@+id/shimmer_pokemon_type1"
				android:layout_width="@dimen/_60sdp"
				android:layout_height="@dimen/_14sdp"
				android:layout_marginTop="@dimen/_8sdp"
				android:background="@drawable/bg_shimmer"
				app:layout_constraintStart_toStartOf="@+id/shimmer_pokemon_name"
				app:layout_constraintTop_toBottomOf="@+id/shimmer_pokemon_name" />

			<View
				android:id="@+id/shimmer_pokemon_type2"
				android:layout_width="@dimen/_50sdp"
				android:layout_height="@dimen/_14sdp"
				android:layout_marginStart="@dimen/_4sdp"
				android:layout_marginTop="@dimen/_8sdp"
				android:background="@drawable/bg_shimmer"
				app:layout_constraintStart_toEndOf="@+id/shimmer_pokemon_type1"
				app:layout_constraintTop_toBottomOf="@+id/shimmer_pokemon_name" />

		</androidx.constraintlayout.widget.ConstraintLayout>

	</com.facebook.shimmer.ShimmerFrameLayout>

</com.google.android.material.card.MaterialCardView>